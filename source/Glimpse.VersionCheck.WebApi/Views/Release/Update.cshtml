@model Glimpse.VersionCheck.UpdateReleaseResults

@{
    ViewBag.Title = "Service Updater";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Service Updater</h2>

<div>
    <h3>Check Status</h3> 
    @if(Model.UpdateOccured) {
        <strong style="color:green">Update Occured</strong>
    } else {
        <span>No Update Occured</span>
    }
</div> 

@if(Model.LastUpdate != null) {
    <div>
        <h3>Next Update Details</h3> 
        <table>
            <tr>
                <th>Next Update Will Occur:</th>
                <td>@Model.LastUpdate.NextUpdateCanOccur</td>
            </tr>
        </table>

        <h3>Last Update Details</h3> 
        <table>
            <tr>
                <th>Time Occured:</th>
                <td>@Model.LastUpdate.TimeOccured</td>
            </tr>
            <tr>
                <th>Was Update Foced:</th>
                <td>@Model.LastUpdate.UpdateWasForced</td>
            </tr>
            <tr>
                <th>Release Details:</th>
                <td>
                    <table border="1">
                        <tr>
                            <th>Existing Records Found</th>
                            <th>Records Affected</th>
                            <th>Records Added</th>
                            <th>Records Updated</th>
                        </tr>
                        <tr>
                            <td>@Model.LastUpdate.ReleaseDetails.ExistingRecordsFound</td>
                            <td>@Model.LastUpdate.ReleaseDetails.RecordsAffected</td>
                            <td>@Model.LastUpdate.ReleaseDetails.RecordsAdded</td>
                            <td>@Model.LastUpdate.ReleaseDetails.RecordsUpdated</td>
                        </tr>
                    </table>

                </td>
            </tr>
            <tr>
                <th>Statistic Release Details:</th>
                <td>
                    <table border="1">
                        <tr>
                            <th>Existing Records Found</th>
                            <th>Records Affected</th>
                            <th>Records Added</th> 
                        </tr>
                        <tr>
                            <td>@Model.LastUpdate.StatisticReleaseDetails.ExistingRecordsFound</td>
                            <td>@Model.LastUpdate.StatisticReleaseDetails.RecordsAffected</td>
                            <td>@Model.LastUpdate.StatisticReleaseDetails.RecordsAdded</td> 
                        </tr>
                    </table> 
                </td>
            </tr>
        </table>
    </div>
}