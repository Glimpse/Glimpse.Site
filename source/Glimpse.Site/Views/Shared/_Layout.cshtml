<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> 
    <link rel="apple-touch-icon" href="~/Content/favicon.png">
    <link rel="icon" href="~/Content/favicon.png">
    <!--[if IE]><link rel="shortcut icon" href="path/to/favicon.ico"><![endif]--> 
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="~/Content/favicon.png"> 
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body class="layout">
    <header>
        <div class="header-inner"> 
            <a href="@Url.Action(MVC.Home.Index())" class="float--right logo-sub"></a>
            @RenderSection("header")
        </div>
    </header>
    <div class="body gw">
        <div class="body-inner">
            @RenderBody()
        </div>
    </div>
    <footer class="gw">
        <div class="footer-inner"> 
            <section class="g one-whole bottom-backing">
                Proudly backed by <a href="http://www.red-gate.com/"><img src="~/Content/logo-redgate.png" style="vertical-align:middle" /></a> <a href="#">and you!</a>
            </section>
        </div>
    </footer>
    @Scripts.Render("~/Script/javascript")
    @RenderSection("scripts", false)
</body>
</html>
