<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> 
    <link rel="apple-touch-icon" href="~/_Content/favicon.png">
    <link rel="icon" href="~/_Content/favicon.png">
    <!--[if IE]><link rel="shortcut icon" href="~/_Content/favicon.ico"><![endif]--> 
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="~/_Content/favicon.png"> 
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/_Content/css")
</head>
<body class="layout">
    <div class="header">
        <div class="header-inner"> 
            <a href="@Url.Action(MVC.Home.Index())" class="float--right logo-sub"></a> 
            @RenderSection("header")
        </div>
    </div>
    <div class="body gw">
        <div class="body-inner"> 
            @RenderBody()
        </div>
    </div>
    <div class="footer gw">
        <div class="footer-inner"> 
            <div class="g one-whole bottom-backing">
                Proudly backed by <a href="http://www.red-gate.com/"><img src="~/_Content/logo-redgate.png" style="vertical-align:middle" /></a> <a href="#">and you!</a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Script/javascript")
    @RenderSection("scripts", false)
</body>
</html>
