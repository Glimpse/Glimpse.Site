<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> 
    <link rel="apple-touch-icon" href="~/Content/_v1/site-favicon.png">
    <link rel="icon" href="~/Content/_v1/site-favicon.png">
    <!--[if IE]><link rel="shortcut icon" href="~/Content/_v1/site-favicon.ico"><![endif]--> 
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="~/Content/_v1/site-favicon.png"> 
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/_v1/css")
</head>
<body class="layout simple">
    <div class="header">
        <div class="header-inner"> 
            <a href="@Url.Action(MVC.Home.Index())" class="float--right logo-sub"></a> 
            @RenderSection("header")
        </div>
    </div>
    <div class="body gw">
        <div class="body-inner"> 
            @RenderBody()
        </div>
    </div>
    <div class="footer gw">
        <div class="footer-outer">
            <div class="footer-inner"> 
                <div class="g one-whole bottom-backing">
                    Proudly backed by <a href="http://www.red-gate.com/"><img src="~/Content/_v1/site-redgate-logo.png" style="vertical-align:middle" /></a> <a href="#">and you!</a>
                </div>
            </div>
        </div>
    </div>
    <script src="http://code.jquery.com/jquery-2.0.0.min.js"></script>
    @Scripts.Render("~/Script/javascript")
    @RenderSection("scripts", false)
</body>
</html>
