<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - the open source diagnostics platform of the web</title>
    @Styles.Render("~/content/sitecss")
</head>
<body class="@ViewBag.PageStyle body-simple">
    <div class="body_container">
        @RenderBody()
    </div>   
    <div class="footer" role="contentinfo">
        <div class="container"> 
            <div class="row footer_last">
                <table width="100%">
                    <tr>
                        <td width="25%">
                            &copy; @DateTime.Now.Year - Glimpse
                        </td>
                        <td width="50%" class="text-center">
                            Proudly backed by <a class="redgate" href="http://www.red-gate.com/"></a> <a href="http://www.github.com/glimpse/glimpse">and you!</a>
                        </td>
                        <td width="25%"></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/sitejs") 
    @RenderSection("scripts", required: false)
</body>
</html>
