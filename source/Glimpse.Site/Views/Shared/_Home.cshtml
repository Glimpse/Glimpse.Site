<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" /> 
    <link rel="apple-touch-icon" href="~/Content/favicon.png">
    <link rel="icon" href="~/Content/favicon.png">
    <!--[if IE]><link rel="shortcut icon" href="path/to/favicon.ico"><![endif]--> 
    <meta name="msapplication-TileColor" content="#FFFFFF">
    <meta name="msapplication-TileImage" content="~/Content/favicon.png"> 
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body class="home">
    <header class="gw">
        <div class="header-inner">
            <section>
                <div class="g one-third hide--lap hide--palm decal">
                    <div class="delta">Download</div>
                    <div>1.0.0-rc2</div>
                    <a href="#" class="sprite sprite-root sprite-root-download"></a>
                </div>
                <div class="g one-third lap-one-whole palm-one-whole logo-main"> 
                    <img src="~/Content/logo.png" alt="Glimpse - The Open Source diagnostics platform of the web"/> 
                </div>
                <div class="g one-third hide--lap hide--palm decal"> 
                    <div class="delta">Source Code</div> 
                    <div>GitHub</div>
                    <a href="#" class="sprite sprite-root sprite-root-github"></a>
                </div>
            </section>
            <section class="g one-whole">
                <h1>The Open Source diagnostics platform of the web</h1>
            </section>
            <section class="g one-whole hide--desk"> 
                <div class="g one-half decal">
                    <div class="delta">Download</div>
                    <div>1.0.0-rc2</div>
                    <a href="#" class="sprite sprite-root sprite-root-download"></a>
                </div>
                <div class="g one-half decal"> 
                    <div class="delta">Source Code</div> 
                    <div>GitHub</div>
                    <a href="#" class="sprite sprite-root sprite-root-github"></a>
                </div> 
            </section>
        </div>
    </header>
    <div class="body gw">
        <div class="body-inner">
            @RenderBody()
        </div>
    </div>
    <footer class="gw">
        <div class="footer-inner"> 
            <section class="g one-whole bottom-backing">
                Proudly backed by <a href="http://www.red-gate.com/"><img src="~/Content/logo-redgate.png" style="vertical-align:middle" /></a> <a href="#">and you!</a>
            </section>
        </div>
    </footer> 
    @Scripts.Render("~/Script/javascript")
    @RenderSection("scripts", false)
</body>
</html>
