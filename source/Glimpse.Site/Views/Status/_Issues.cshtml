@model IEnumerable<Glimpse.Release.ReleaseIssue>

@if (Model.Any())
{
    <table class="table table-striped table-condensed">
        <tr>
            <th style="width: 10%;">Issue</th>
            <th style="width:15%">Category</th>
            <th style="width:60%;">Description</th>
            <th style="width: 15%;">User</th>
        </tr>
        @foreach (var issue in Model)
        {
            <tr>
                <td><a href="@issue.IssueLinkUrl">#@issue.Number</a></td>
                <td>@issue.Category</td>
                <td>@issue.Title</td>
                <td><a href="@issue.User.HtmlUrl">@issue.User.Login</a></td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-muted text-center" style="padding: 15px">@ViewData["emptyMessage"]</p>
}